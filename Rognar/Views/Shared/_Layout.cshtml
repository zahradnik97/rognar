<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Conquerors of Rognar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Conquerors of Rognar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About CoR", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!ViewBag.IsLoggedIn)
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
                        <ul id="login-dp" class="dropdown-menu">
                            <li>
                                <div class="row">
                                    <div class="container" style="width:300px;padding-top:15px;">
                                        <form class="form" role="form" method="post" action="/Home/Login" accept-charset="UTF-8" id="login-nav">
                                            <div class="form-group col-md-12">
                                                <label for="uname">Username</label>
                                                <input type="text" class="form-control" id="uname" name="username" placeholder="Username" required>
                                            </div>
                                            <div class="form-group col-md-12">
                                                <label for="password">Password</label>
                                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                                                <div class="help-block text-center"><a href="">Forget the password ?</a></div>
                                            </div>
                                            <div class="form-group col-md-12">
                                                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                                            </div>                                         
                                        </form>
                                    </div>
                                    <div class="bottom text-center">
                                        New here ? <a href="/Home/Register"><b>Register!</b></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>}
                    else
                    {
                        <li>@Html.ActionLink("Logout","Logout", "Home")</li>
                    }
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="col-lg-12" style="margin-top:10px; position:absolute;left:21px; height:30%;width:15%;border:1px solid black; text-align:center;">SOME SERIOUS SHIT TABLE WITH SCORE.</div>

        @RenderBody()
        <hr />
        <footer>
            <p>Conquerors of Rognar &copy; Tomáš Zahradník, Richard Ivánek</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
