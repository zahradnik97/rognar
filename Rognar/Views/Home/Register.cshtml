@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-4">
        <h2>@ViewBag.Title</h2>

        <p class="@(ViewBag.Error != null && ViewBag.Error ? "red" : string.Empty)">@ViewBag.Message</p>

        <form method="post" action="" class="form-horizontal">
            <div class="form-group @(ViewBag.UnameError != null ? "has-error" : string.Empty)">
                <label for="uname" class="col-sm-4">Username</label>
                <div class="col-sm-8">
                    <input type="text" name="username" id="uname" placeholder="Username" value="@Request["username"]" class="form-control " required/>
                    <span id="helpBlock" class="help-block">@ViewBag.UnameError</span>
                </div>
            </div>
            <div class="form-group @(ViewBag.PassError != null ? "has-error" : string.Empty)">
                <label for="pass" class="col-sm-4">Passsword</label>
                <div class="col-sm-8">
                    <input type="password" name="password" id="pass" placeholder="Password" class="form-control" required/>
                    <span id="helpBlock" class="help-block">@ViewBag.PassError</span>
                </div>
            </div>
            <div class="form-group @(ViewBag.MailError != null ? "has-error" : string.Empty)">
                <label for="mail" class="col-sm-4">Email address</label>
                <div class="col-sm-8">
                    <input type="email" name="email" id="mail" placeholder="Email" value="@Request["email"]" class="form-control" required />
                    <span id="helpBlock" class="help-block">@ViewBag.MailError</span>
                </div>
            </div>

            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" name="submit" class="btn btn-default col-sm-10">Register</button>
            </div>
</form>
    </div>
</div>
